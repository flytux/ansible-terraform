---
apiVersion: networking.istio.io/v1alpha3
kind: VirtualService
metadata:
  name: hello-v2-on-gateway-ingressgateway-secondary
spec:
  hosts: {{ cert_domains_secondary_ingress | to_json }}
  gateways:
  - gateway-ingressgateway-secondary
  http:
  - match:
    - uri:
        #exact: /hello
        prefix: /myhello2/
    route:
    - destination:
        host: helloworld2
        port:
          number: 5000

